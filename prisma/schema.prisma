// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  uuid           String    @id @default(dbgenerated("gen_random_uuid()"))
  googleMapLink  String?   @unique(map: "Place_google_map_key")
  displayName    String
  phoneNumber    String    @unique(map: "Place_phone_key")
  website        String?
  address        String    @unique(map: "Place_address_key")
  linkProfile    Json?
  googleVerified Boolean?  @default(false)
  googleActived  Boolean?  @default(false)
  categories     Json?
  thumbnailUrl   String?
  imagesUrl      Json?
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt

  @@map("place")
}
