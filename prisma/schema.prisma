// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  uuid           String    @id @default(uuid()) @db.Uuid
  googleMapLink  String?   @unique(map: "Place_google_map_key") @db.VarChar(128)
  displayName    String    @db.VarChar(255)
  phoneNumber    String?   @unique(map: "Place_phone_key") @db.VarChar(64)
  website        String?   @db.VarChar(255)
  city           String?   @db.VarChar(128)
  district       String?   @db.VarChar(255)
  ward           String?   @db.VarChar(255)
  address        String?   @db.VarChar(255)
  linkProfile    Json?
  googleVerified Boolean?  @default(false)
  googleActived  Boolean?  @default(false)
  categories     Json?
  thumbnailUrl   String?
  imagesUrl      Json?
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt

  @@map("place")
}
